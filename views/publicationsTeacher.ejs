<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>LMS CETI</title>

        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
        <link href="css/bootstrap.min.css" rel="stylesheet">
        <link href="css/sidebars.css" rel="stylesheet">
        <link href="sidebars.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    </head>

    <body>
        <main class="d-flex flex-nowrap"> 
			<%- include('include/_navBarTeacher')%>
	
                <div class="container overflow-auto" >
                    <form action="/template" method="GET">
                		<div class="container">
							<input type = "hidden" name = "classroomId"  id = "classroomId" value ="">
        					<button type="submit" class="btn btn-primary ">Plantilla</button>
						</div>
					</form>		
					<%- include('include/_publicationTeacher')%>
				</div>

			<div class="position-absolute bottom-0 end-0  m-5">
        		<button type="button" id="makePublication" class="btn btn-primary "><i class="bi bi-plus"></i></button>
			</div>
			<script type="text/javascript">
			const queryString = window.location.search;
			const urlParams = new URLSearchParams(queryString);
			const idClassroom = urlParams.get('publicationId')
			document.getElementById("makePublication").onclick = function () {
					location.href = "/createPublication?classroom="+idClassroom;
				};
			console.log(idClassroom)
			document.getElementById("classroomId").value = idClassroom
       		</script>
            <script src="js/bootstrap.bundle.min.js"></script>  
            <script src="js/sidebars.js"></script>  
        </main>
    </body>
</html>
