<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>LMS CETI</title>

        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
        <link href="css/bootstrap.min.css" rel="stylesheet">
        <link href="css/sidebars.css" rel="stylesheet">
        <link href="sidebars.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    </head>

    <body>
        <main class="d-flex flex-nowrap"> 
			<%- include('include/_navBarTeacher')%>
	
                <div class="container" >

                       	<div class="card mt-4">
				<div class="card-body">
                       			<form action="api/template" method="POST">
					
							<div class="container row">
									
            								<input id="templateCode" class="form-control p-2" type="hidden" name="templateCode" value=""/>
            								<input id="idCurrentClassroom" class="form-control p-2" type="hidden" name="idCurrentClassroom" value=""/>
            							<div class="col-3">
            								<label for="startDate" class="form-label">Titulo de tarea/publicacion</label>
						<%publications.forEach((publication, index) =>{%>
            								<input id="titles" class="form-control p-2" type="text" name="title" value="<%= publication.title %>"readonly/>
									<input id="templateCode" class="form-control p-2" type="hidden" name="publicationId" value="<%= publication._id%>"/>
						<%})%>
								</div>
            							<div class="col-3">
            								<label for="startDate" class="form-label">Fecha de entrega</label>
						<%publications.forEach((publication, index) =>{%>
            								<input id="startDate" class="form-control p-2" type="date" name="deliveryDate" required/>
						<%})%>
          							</div>

							</div>

                        			<button type="submit" class="btn btn-primary auto">Aplicar</button>
					</form>		
				</div>
			</div>
		</div>


		<script>
			const queryString = window.location.search;
			const urlParams = new URLSearchParams(queryString);
			const idClassroom = urlParams.get('templateCode')
			const idCurrentClassroom = urlParams.get('currentClassroom')
			console.log(idCurrentClassroom)	
			document.getElementById("idCurrentClassroom").value = idCurrentClassroom 
			document.getElementById("templateCode").value = idClassroom 
		</script>

		<script src="js/bootstrap.bundle.min.js"></script>  
            	<script src="js/sidebars.js"></script>  
        </main>
    </body>
</html>
